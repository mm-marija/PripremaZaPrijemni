<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/asssar"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="50dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/naslov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/delius"
                android:gravity="center"
                android:text="Припреми се за пријемни испит на \n Академији струковних студија Шумадија \n - одеск Аранђеловац"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/informacije"
                android:layout_width="300dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:backgroundTint="#227AE7"
                android:fontFamily="@font/delius"
                android:shadowColor="#FFFFFF"
                android:text="Информације о упису"
                android:textSize="16sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/test"
                android:layout_width="300dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:backgroundTint="#E79F24"
                android:fontFamily="@font/delius"
                android:text="Започни тест"
                android:textSize="16sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/informator"
                android:layout_width="300dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:backgroundTint="#227AE7"
                android:fontFamily="@font/delius"
                android:text="Преузми информатор"
                android:textSize="16sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/prirucnik"
                android:layout_width="300dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:backgroundTint="#E79F24"
                android:fontFamily="@font/delius"
                android:text="Преузми приручник"
                android:textSize="16sp"
                app:cornerRadius="15dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


