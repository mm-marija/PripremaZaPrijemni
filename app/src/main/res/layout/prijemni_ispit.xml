<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/blue"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/naslovPrijemniIspit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/delius"
        android:text="Пријемни испит"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/opisPrijemniIspit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/delius"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:justificationMode="none"
            android:lineSpacingExtra="3sp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text=" Пријемни испит се полаже 07. септембра 2021. године у 11:00 часова.Пријемни испит је обавезан.  Испит се полаже у облику теста и траје 60 минута. На пријемном испиту кандидат може остварити максимално 60 бодова што укупно чини максимално 100 бодова. У односу на студијски програм на који конкуришу, кандидати полажу пријемни испит у облику теста из следећих предмета или комбинација предмета.\n ИНФОРМАЦИОНЕ ТЕХНОЛОГИЈЕ\n Информатика и Тест општег знања\n ПРИМЕЊЕНА ЕКОНОМИЈА И ПРЕДУЗЕТНИШТВО\n Информатика и Тест општег знања\n МЕНАЏМЕНТ У ТУРИЗМУ И УГОСТИТЕЉСТВУ\n Информатика и Тест општег знања\n ЗАШТИТА ЖИВОТНЕ И РАДНЕ СРЕДИНЕ\n Информатика и Тест општег знања\n ТЕХНОЛОГИЈА ХРАНЕ И ГАСТРОНОМИЈА\n Информатика и Тест општег знања\n Кандидати су дужни да буду у школи најкасније 45 минута пре почетка пријемног испита и код себе морају имати важећу личну карту или пасош. За више детаља посетите сајт Академије струковних студија Шумадија - одсек Аранђеловац."
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/naslovPrijemniIspit" />
    </ScrollView>

    <Button
        android:id="@+id/closePrjemniIspit"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:text="X"
        android:textColor="#3C3B3B"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#03010100"
        app:strokeColor="#03010100" />

</androidx.constraintlayout.widget.ConstraintLayout>